{{>layout/header}}

<div class="container">
    <div class="row justify-content-center align-items-center" style="height:100vh">
        <div class="col-4">
            <h2>회원 관리 시스템</h2>
            <div class="card">
                <div class="card-body">
                    <form action="" autocomplete="off">
                        <label>아이디</label>
                        <div class="form-group">
                            <input type="text" class="form-control" name="username" id="accountId">
                        </div>
                        <label>비밀번호</label>
                        <div class="form-group">
                            <input type="password" class="form-control" name="password" id="password">
                        </div>
                        <div>
                            <button type="button" id="button-login" class="btn btn-primary">login</button>
                            <a class="col-xs-6 center" href="/signup" role="button">회원가입</a>
                        </div>
                        <button type="button" id="button-cookie" class="btn btn-primary">cookie</button>
                        <button type="button" id="button-delete" class="btn btn-primary">delete</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
